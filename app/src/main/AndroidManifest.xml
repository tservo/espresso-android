<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.routinew.espresso">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".EspressoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:launchMode="singleTop"
        android:theme="@style/Theme.App.NoActionBar">
        <activity
            android:name=".ui.DispatchActivity"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.login.LoginActivity"
            android:theme="@style/Theme.App">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.routinew.espresso.ui.login.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.restaurant.RestaurantDetailActivity"
            android:label="@string/title_restaurant_detail"
            android:parentActivityName=".ui.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.routinew.espresso.ui.main.MainActivity" />
        </activity>
        <activity android:name=".ui.main.MainActivity" />
    </application>

</manifest>