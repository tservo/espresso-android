<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.login.LoginActivity">
    <!-- android:background="@drawable/espresso_background" -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/login"
        android:src="@drawable/logo_espresso" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_general_margin"
        android:backgroundTint="@color/espresso_button_background"
        android:onClick="login"
        android:padding="@dimen/activity_general_margin"
        android:text="@string/login"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_general_margin"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="settings"
        android:padding="@dimen/activity_general_margin"
        android:text="@string/settings"
        android:textColor="@color/design_default_color_on_primary" />
</LinearLayout>
